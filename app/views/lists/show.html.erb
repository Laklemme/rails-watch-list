<h1><%= @list.name %></h1>

<%= cl_image_tag @article.photo.key, height: 300, width: 400, crop: :fill %>

<h3>Bookmarks</h3>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
  <li><%= bookmark.movie.title %><br>
  <%= bookmark.comment %><br>
   <%= link_to "Remove",
                  bookmark_path(bookmark),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>

<%= link_to 'Add a bookmark', new_list_bookmark_path(@list) %>
